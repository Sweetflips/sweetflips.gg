# ============================================
# Sweetflips Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# ============================================
# REQUIRED - Database
# ============================================
# PostgreSQL connection string (from Supabase or your database provider)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ============================================
# REQUIRED - Supabase Configuration
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# ============================================
# REQUIRED - API Keys
# ============================================

# Razed API Configuration
BASE_RAZED_API_URL="https://api.razed.com/player/api/v1/referrals/leaderboard?referral_code=YOUR_CODE"
AUTH_RAZED="your-razed-auth-token"

# Luxdrop API Configuration
LUXDROP_API_KEY="your-luxdrop-api-key"

# Cron Job Authentication
# Generate a secure random string for protecting cron endpoints
CRON_SECRET="your-secure-random-string-here"

# ============================================
# REQUIRED - Kick Authentication (if using)
# ============================================
NEXT_PUBLIC_KICK_CLIENT_ID="your-kick-client-id"
KICK_CLIENT_SECRET="your-kick-client-secret"

# ============================================
# OPTIONAL - Proxy Configuration
# ============================================
# Only needed if you want to route API requests through a proxy
# Leave empty if not using proxy
PROXY_HOST=""
PROXY_PORT=""
PROXY_USERNAME=""
PROXY_PASSWORD=""

# ============================================
# OPTIONAL - Special Event Periods
# ============================================
# Format: YYYY-MM-DD (e.g., "2025-06-23")
# Leave empty to use default monthly logic

# Server-side special period (for API routes)
SPECIAL_PERIOD_START_DATE=""
SPECIAL_PERIOD_END_DATE=""

# Client-side special period (for UI components)
NEXT_PUBLIC_SPECIAL_PERIOD_START_DATE=""
NEXT_PUBLIC_SPECIAL_PERIOD_END_DATE=""

# Luxdrop Period Configuration
# Leave empty to use current month/year
LUXDROP_PERIOD_YEAR=""
LUXDROP_PERIOD_MONTH=""
NEXT_PUBLIC_LUXDROP_PERIOD_YEAR=""
NEXT_PUBLIC_LUXDROP_PERIOD_MONTH=""

# ============================================
# OPTIONAL - Geo-blocking (Edge Middleware)
# ============================================
# Comma-separated list of country codes (e.g., "US,GB")
EDGE_BLOCKED_COUNTRIES=""

# Comma-separated list of city names (lowercase, e.g., "new york,london")
EDGE_BLOCKED_CITIES=""

# ============================================
# OPTIONAL - Additional Supabase Keys
# ============================================
# Service role key for admin operations (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=""
SUPABASE_JWT_SECRET=""

# ============================================
# OPTIONAL - Vercel Deployment
# ============================================
# These are automatically set by Vercel in production
# Only set manually for local development if needed
VERCEL_ENV=""
VERCEL_URL=""

# ============================================
# NOTES
# ============================================
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Never commit .env.local or .env files with real secrets
# - All dates should be in UTC format (YYYY-MM-DD)
# - Proxy configuration is optional - requests go directly if not set
# - Special period dates are optional - defaults to monthly logic if not set
