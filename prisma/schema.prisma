generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  username      String
  email         String
  kickId        String?  @unique
  tokens Decimal @db.Decimal(10, 2)
  refresh_token String?
  role          String?
  auth_user_id  String?  @unique
  kick_linked_at DateTime?
  kick_link_requested_at DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  orders        Order[] // âœ… new relation to orders
  tokenTransactions TokenTransaction[]
  avatar        Avatar?
  sentMessages  ChatMessage[] @relation("SentMessages")
  chatRooms     ChatRoomMember[]
}

model UserData {
  id               Int      @id @default(autoincrement())
  username         String
  level            Int
  kickId           String?  @unique
  watchtime        Int
  xp               Int
  points           Int
  followage        String
  converted_tokens Int
  token_balance    Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model GiveawayCounter {
  id        Int      @id @default(1)
  amount    Float
  updatedAt DateTime @updatedAt
}

model StreamSchedule {
  id    Int     @id @default(autoincrement())
  day   String?
  name  String?
  titel String?
  time  String?
}

model FortuneWheel {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  telegram_username String
  created_at        DateTime @default(now())
  spin_outcome      String?
}

model TokenSettings {
  id             Int      @id @default(autoincrement())
  conversionRate Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  image       String
  price       Int
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders      Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  total     Int
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model OAuthSession {
  id            String   @id @default(uuid())
  codeVerifier  String
  createdAt     DateTime @default(now())
  expiresAt     DateTime
}

model TokenTransaction {
  id              String   @id @default(uuid())
  userId          Int
  transactionType String   // 'convert', 'spend', 'payout', 'admin_adjustment', 'purchase'
  amount          Decimal  @db.Decimal(10, 2)
  balanceBefore   Decimal  @db.Decimal(10, 2)
  balanceAfter    Decimal  @db.Decimal(10, 2)
  metadata        Json?    // Additional context (e.g., game ID, product ID, admin ID)
  ipAddress       String?
  userAgent       String?
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([transactionType])
  @@index([createdAt])
}

model Avatar {
  id            String   @id @default(uuid())
  
  // User linking fields - supports both auth methods
  auth_user_id  String?  @unique @map("auth_user_id") @db.Uuid // Links to auth.users (UUID type)
  userId        Int?     @unique // Links to public.User
  
  // Core Ready Player Me properties
  avatarId      String?  // Ready Player Me avatar ID
  partner       String?  // Partner identifier
  
  // Avatar configuration
  gender        String?  // OutfitGender: masculine, feminine, neutral
  bodyType      String?  // BodyType: fullbody, halfbody, fullbody-xr
  bodyShape     String?  // BodyShape: average, athletic, heavyset, plussize
  
  // Avatar assets - stores all customization options as JSON
  // Keys are AssetType values (skinColor, hairStyle, outfit, etc.)
  // Values are asset IDs or configuration objects
  assets        Json?    @db.Json
  
  // Visual representations
  base64Image   String?  @db.Text // Base64 encoded avatar preview image
  avatarUrl     String?  // URL to the 3D avatar model (.glb file)
  avatarLink    String?  // Ready Player Me shareable avatar link (e.g. https://readyplayer.me/avatar/[id])
  thumbnailUrl  String?  // URL to avatar thumbnail image
  
  // Render settings
  renderPose    String?  // RenderPose: relaxed, powerStance, standing, thumbsUp
  expression    String?  // Expression: happy, lol, sad, scared, rage
  
  // Status
  isDraft       Boolean  @default(false)
  isPublic      Boolean  @default(true)
  
  // Metadata
  metadata      Json?    // Additional metadata (e.g., version, platform settings)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([auth_user_id])
  @@index([avatarId])
}

model ChatRoom {
  id            String   @id @default(uuid())
  name          String
  isPrivate     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  messages      ChatMessage[]
  members       ChatRoomMember[]
}

model ChatRoomMember {
  id            String   @id @default(uuid())
  userId        Int
  chatRoomId    String
  joinedAt      DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id])
  chatRoom      ChatRoom @relation(fields: [chatRoomId], references: [id])
  
  @@unique([userId, chatRoomId])
}

model ChatMessage {
  id            String   @id @default(uuid())
  content       String
  userId        Int
  chatRoomId    String
  createdAt     DateTime @default(now())
  editedAt      DateTime?
  
  user          User     @relation("SentMessages", fields: [userId], references: [id])
  chatRoom      ChatRoom @relation(fields: [chatRoomId], references: [id])
  
  @@index([chatRoomId, createdAt])
}
